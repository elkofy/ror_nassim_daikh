<div id="<%= dom_id model %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Ingredients:</strong>
    <%= model.Ingredients %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= model.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Type:</strong>
    <%= model.type %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Price:</strong>
    <%= model.price %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this model", model, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Edit this model", edit_model_path(model), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
